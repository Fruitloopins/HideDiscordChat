{
  "schemaVersion": 1,
  "id": "hidediscordchat",
  "version": "${version}",
  "name": "HideDiscordChat",
  "description": "Hide DiscordSRV messages in chat",
  "authors": [
    "Fruitloopins"
  ],
  "contact": {
    "homepage": "https://fwloopins.com",
    "repo": "https://github.com/Fruitloopins/HideDiscordChat",
    "issues": "https://github.com/Fruitloopins/HideDiscordChat/issues"
  },
  "license": "All-Rights-Reserved",
  "icon": "assets/hdc/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "com.fwloopins.hidediscordchat.client.HideDiscordChatClient"
    ],
    "modmenu": [
      "com.fwloopins.hidediscordchat.client.config.ModMenuIntegration"
    ]
  },
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  },
  "custom": {
    "modmenu": {
